<h1>Reschedule</h1>

{{report-filter
  initial       = (hash
    customer    = _customer
    project     = _project
    task        = _task
    user        = _user
    from        = _from
    to          = _to
    review      = review
    notBillable = not_billable
    notVerified = not_verified
  )
  on-apply      = (action 'applyFilter')
}}

{{#paginated-table
  data-test-filter-results
  pages = model.meta.pagination.pages
  page  = page
}}
  <thead>
    <tr>
      <th width="4%">User</th>
      <th width="6%">Date</th>
      <th width="4%">Duration</th>
      <th width="10%">Customer</th>
      <th width="10%">Project</th>
      <th width="10%">Task</th>
      <th width="30%">Comment</th>
      <th width="8%"></th>
      <th width="8%"></th>
      <th width="6%"></th>
      <th width="4%"></th>
    </tr>
  </thead>
{{^}}
  <tbody>
    {{#each model as |report|}}
      {{report-reschedule-row report
        data-test-reschedule-report
        data-test-reschedule-report-id = report.id
        verifyUser                     = currentUser
        on-save                        = (route-action 'saveReport')
      }}
    {{^}}
      <tr>
        <td colspan="11" class="text-center">
          {{#if (is-array model)}}
            I didn't find any results - try broadening your filters!
          {{else}}
            Please specify some filter parameters.
          {{/if}}
        </td>
      </tr>
    {{/each}}
  </tbody>
{{/paginated-table}}
