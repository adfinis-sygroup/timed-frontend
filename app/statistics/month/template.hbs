<table class="table table--striped table--statistics">
  <thead>
    <tr>
      <th>Year</th>
      <th>Month</th>
      <th>Worktime</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each model.data as |month|}}
      <tr>
        <td>{{month.attributes.year}}</td>
        <td>{{moment-format (moment month.attributes.month 'M') 'MMMM'}}</td>
        <td>{{humanize-duration (parse-django-duration month.attributes.duration) false}}</td>
        <td>{{statistic-bar (div (parse-django-duration month.attributes.duration) maxDuration)}}</td>
      </tr>
    {{/each}}
  </tbody>
  <tfoot>
    <tr>
      <td><strong>Total:</strong></td>
      <td></td>
      <td><strong class="total">{{humanize-duration (parse-django-duration model.meta.total-time) false}}</strong></td>
      <td></td>
    </tr>
  </tfoot>
</table>