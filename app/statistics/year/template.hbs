<table class="table table--striped table--statistics">
  <thead>
    <tr>
      <th>Year</th>
      <th>Worktime</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each model.data as |year|}}
      <tr>
        <td>{{year.attributes.year}}</td>
        <td>{{humanize-duration (parse-django-duration year.attributes.duration) false}}</td>
        <td>{{statistic-bar (div (parse-django-duration year.attributes.duration) maxDuration)}}</td>
      </tr>
    {{/each}}
  </tbody>
  <tfoot>
    <tr>
      <td><strong>Total:</strong></td>
      <td><strong class="total">{{humanize-duration (parse-django-duration model.meta.total-time) false}}</strong></td>
      <td></td>
    </tr>
  </tfoot>
</table>