<td>{{changeset.user.username}}</td>
<td>{{moment-format changeset.date 'DD.MM.YYYY'}}</td>
<td>{{format-duration changeset.duration false}}</td>
{{#task-selection history=false task=changeset.task as |t|}}
  <td class="form-group {{if changeset.error.task 'has-error'}}">{{t.customer}}</td>
  <td class="form-group {{if changeset.error.task 'has-error'}}">{{t.project}}</td>
  <td class="form-group {{if changeset.error.task 'has-error'}}">{{t.task}}</td>
{{/task-selection}}
<td class="form-group">
  {{input class='form-control' value=changeset.comment}}
</td>
<td class="form-group">
  {{sy-checkbox checked=changeset.review on-change=(action (mut changeset.review)) label='Needs review'}}
</td>
<td class="form-group">
  {{sy-checkbox checked=changeset.notBillable on-change=(action (mut changeset.notBillable)) label='Not billable'}}
</td>
<td class="form-group">
  {{sy-checkbox title=(if changeset.verifiedBy.id (concat 'Verified by ' changeset.verifiedBy.username)) checked=changeset.verifiedBy.id on-change=(action 'setVerified') label='Verified'}}
</td>
<td>
  <button
    class="btn btn-primary"
    disabled={{or (not changeset.isDirty) (not changeset.isValid)}}
    {{action 'save'}}
  >
    {{fa-icon 'save'}}
  </button>
</td>
