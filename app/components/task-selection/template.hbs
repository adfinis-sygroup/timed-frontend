{{yield (hash
  customer = (component 'aupac-typeahead'
    name               = 'customer'
    action             = (action (mut customer))
    class              = 'form-control'
    disabled           = disabled
    source             = customerSource
    selection          = (readonly customer)
    placeholder        = 'Select customer...'
    async              = true
    minLength          = -1
    limit              = limit
    display            = display
    transformSelection = transformSelection
    suggestionTemplate = customerTemplate
  )
  project = (component 'aupac-typeahead'
    name               = 'project'
    action             = (action (mut project))
    class              = 'form-control'
    disabled           = (or disabled (not customer))
    source             = projectSource
    selection          = (readonly project)
    placeholder        = 'Select project...'
    async              = true
    minLength          = -1
    limit              = limit
    display            = display
    transformSelection = transformSelection
    suggestionTemplate = suggestionTemplate
  )
  task = (component 'aupac-typeahead'
    name               = 'task'
    action             = (action (queue (action (mut task)) (action on-set-task)))
    class              = 'form-control'
    disabled           = (or disabled (not project))
    placeholder        = 'Select task...'
    source             = taskSource
    selection          = (readonly task)
    async              = true
    minLength          = -1
    limit              = limit
    display            = display
    transformSelection = transformSelection
    suggestionTemplate = suggestionTemplate
  )
  model = (hash
    customer = customer
    project  = project
    task     = task
  )
)}}
