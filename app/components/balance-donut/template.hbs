<div class="donut-title">{{title}}</div>

<div class="donut">
  <svg width="100%" height="100%" viewBox="0 0 40 40">
    <circle
      class="donut-ring"
      cx="20"
      cy="20"
      r={{radius}}
      fill="transparent"
      stroke-width="2"
    ></circle>

    <circle
      class="donut-segment"
      cx="20"
      cy="20"
      r={{radius}}
      fill="transparent"
      stroke-width="2"
      stroke-dasharray="{{mult (min value 1) 100}} {{mult (sub 1 (min value 1)) 100}}"
      stroke-dashoffset="25"
    ></circle>
  </svg>

  <div class="donut-content">
    {{#if balance.usedDuration}}
      {{format-duration balance.usedDuration false}}
    {{else}}
      {{#if balance.credit}}
        <small>{{balance.usedDays}} of {{balance.credit}}</small>
        {{round (mult value 100)}}%
      {{else}}
        {{balance.usedDays}}
      {{/if}}
    {{/if}}
  </div>
</div>